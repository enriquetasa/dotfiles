{
  // TODO - include extension installs
  "python.pythonPath": "/usr/bin/python3",

  // tabs
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  
  // formatting
  "editor.formatOnSave": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,

  // font
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 17,

  //saving
  "files.autoSave": "afterDelay",

  // explorer
  "explorer.sortOrder": "type",
                                     
  // viewing
  "editor.mouseWheelZoom": true,
  "editor.wordWrap": "on",
  "editor.cursorSmoothCaretAnimation": true,
  "terminal.integrated.fontSize": 17,
                                                 
  // exclude files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.tags": true,
    "**/.bash_history": true,
    "**/.viminfo": true,
    "**/*.tar.gz": true,
    "**/*.old": true,
    "**/*.orig": true,
    ".config": true,
    ".cache": true,
    ".gnome2": true,
    ".mozilla": true,
    ".pki": true,
    ".pyenv": true,
    ".vim": true,
    ".vnc": true,
    ".vscode/ipch": true,
    ".vscode-server": true,
    "backup": true,
    "bin": true,
    "cfg_loc": true,
    "data": true,
    "database": true,
    "db_recovery": true,
    "dev": true,
    "oel": true,
    "logging": true,
    "registry": true,
    "source/*.enummap": true,
    "tmp": true,
    "work": true
  }
}

