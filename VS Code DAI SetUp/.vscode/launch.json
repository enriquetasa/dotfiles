{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GDB",
      "type": "gdb",
      "request": "launch",
      "target": "./bin/${fileBasenameNoExtension}",
      "cwd": "${workspaceRoot}",
    },
    {
      "name": "GDB - with Args",
      "type": "gdb",
      "request": "launch",
      "target": "./bin/${fileBasenameNoExtension}",
      "cwd": "${workspaceRoot}",
      "arguments": "${input:gdbArgs}"
    },
    {
      "name": "GDB - attach",
      "type": "gdb",
      "request": "attach",
      "executable": "./bin/${fileBasenameNoExtension}",
      "target": "${input:processIdPrompt}"
    }
  ],
  "inputs": [
    {
      "id": "processIdPrompt",
      "description": "Please enter process ID",
      "default": "<pid>",
      "type": "promptString"
    },
    {
      "id": "gdbArgs",
      "description": "Please enter arguments to gdb",
      "default": "<args>",
      "type": "promptString"
    },
  ]
}